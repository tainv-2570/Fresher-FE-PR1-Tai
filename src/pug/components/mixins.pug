mixin link(href, name)
    a(class!=attributes.class href=href)= name

mixin heading(title,vector)
    .heading(class!=attributes.class)
        h1(class ="heading__title")= title
        img(src=`./assets/images/v-${vector ? 'title' : 'heading'}.png`, alt="v-heading")
        if title === "Đăng nhập"
            a(href="./dangky.html" class="btn btn--register") Đăng ký
        if title === "Đăng ký"
            a(href="./dangnhap.html" class="btn btn--register") Đăng nhập

mixin renderList(arr,heading)
    each item in arr
        li.list__item
            a(href="./about.html" class=`item__link ${item === heading ? 'item__link--heading' : ''}`)= item

mixin imageProduct(src)
    .product__image(class!=attributes.class)
        .product__image-line
        img(src=src, alt="product14" class="product__image-main")
        .product__image-action
                p.action__item
                    i.fas.fa-heart
                    | Yêu thích
                p.action__item
                    i.fas.fa-signal
                    | So sánh
                i.fas.fa-external-link-alt

mixin renderProduct(src,name,price,discount,className)
    .product
        +imageProduct(src)(class=className)
        a(href="./detail.html")
            h1.product__name= name
            p.product__price= `${price}đ `
                span.product__price-discount=` ${discount}đ`
            button.btn.btn--black.btn--cart add to cart

mixin renderProductRow(src,name,price,desc,discount,className)
    .product.row
        .col-md-4
            .product__image
                +imageProduct(src)(class=className)
        .col-md-8
            .product__info
                h1.product__name= name
                p.product__price= `${price}đ `
                p.product__desc= desc
                button.btn.btn--black.btn--cart add to cart
                span.product__info-action
                    span.action__item
                        i.fas.fa-heart
                        | Yêu thích
                    span.action__item
                        i.fas.fa-signal
                        | So sánh

mixin breadcrumbs(listBreadcrumbs)
    ul.breadcrumbs
        each item in listBreadcrumbs
            li.breadcrumbs__item
                a(href="#" class="breadcrumbs__item-link")= item

mixin tabs()
    ul#pills-tab.nav.nav-pills.mb-3(role='tablist')
        li.nav-item
            a#pills-character-tab.nav-link.active(data-toggle='pill' href='#pills-character' role='tab' aria-controls='pills-character' aria-selected='true') Đặt điểm nổi bật
        li.nav-item
            a#pills-info-tab.nav-link(data-toggle='pill' href='#pills-info' role='tab' aria-controls='pills-info' aria-selected='false') Thông tin sản phẩm
        li.nav-item
            a#pills-review-tab.nav-link(data-toggle='pill' href='#pills-review' role='tab' aria-controls='pills-review' aria-selected='false') Đánh giá
    #pills-tabContent.tab-content
        #pills-character.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='pills-character-tab')= textDetail
        #pills-info.tab-pane.fade(role='tabpanel' aria-labelledby='pills-info-tab')= textDetail
        #pills-review.tab-pane.fade(role='tabpanel' aria-labelledby='pills-review-tab')= textDetail

mixin productRow(item)
    tr
        td(width="17%")
            img(src=`./assets/images/products/${item.image}`, alt=`product-${item.image}`)
        td(width="34%")
            h1.product__name= item.name
        td(width="15%")
            p.product__price= `${item.price}đ `
        td(width="15%")
            input(type="text" class="cart__table-input" value="1")
        td(width="13%")
            p.product__price= `${item.price}đ `
        td(width="6%")
            i.fas.fa-trash-alt

mixin orderRow(item)
    tr
        td(width="5%")
            p= item.num
        td(width="30%").table__col-num
            h2= `${item.id} - ${item.date}`
            span= item.datetime
        td(width="17%")
            p= item.warehouse
        td(width="7%")
            p= item.amount
        td(width="13%")
            p= `${item.total}`
        td(width="15%")
            p= item.status
        td(width="13%")
            p= item.actions

mixin pagination()
    nav(aria-label='Page navigation example')
        ul.pagination
            li.page-item
                a.page-link(href='#' aria-label='Previous')
                    i.fas.fa-angle-left
            li.page-item.active
                a.page-link(href='#') 1
            li.page-item
                a.page-link(href='#') 2
            li.page-item
                a.page-link(href='#') 3
            li.page-item
                a.page-link(href='#' aria-label='Next')
                    i.fas.fa-angle-right

mixin carousel(id)
    .carousel.slide(data-ride='carousel' id= id)
        .carousel-inner
          .carousel-item.active
            .newproduct__list.w-100
              each item in [1,2,3,4]
                +renderProduct(`./assets/images/products/${item}.jpg`,"rượu vang đà lạt", "370.000","450.000","product__image--sale")
          .carousel-item
            .newproduct__list.w-100
              each item in [1,2,3,4]
                +renderProduct(`./assets/images/products/${item}.jpg`,"rượu vang đà lạt", "370.000","450.000","product__image--sale")
        a.carousel-control-prev(href=`#${id}` role='button' data-slide='prev')
          span.carousel-control-prev-icon(aria-hidden='true')
          span.sr-only Previous
        a.carousel-control-next(href=`#${id}` role='button' data-slide='next')
          span.carousel-control-next-icon(aria-hidden='true')
          span.sr-only Next