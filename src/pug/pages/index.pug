  section.newproduct
    .container
      +heading("Sản phẩm mới")
      .newproduct__list
        each item in [1,2,3,4]
          +renderProduct(`./assets/images/products/${item}.jpg`,"rượu vang đà lạt", "370.000","450.000","product__image--new")
  section.album
    ul.album__list
      each item in albums
        li.album__list-item
          img(src=`./assets/images/home-image${item}.jpg`, alt=`${item}` class="item__image")
          .item__hover
            img(src=`./assets/images/hover1.png`, alt=`hover1`)
  section.seller
    .container
      +heading("Sản phẩm bán chạy")
      .newproduct__list
        each item in [1,2,3,4]
          +renderProduct(`./assets/images/products/${item}.jpg`,"rượu vang đà lạt", "370.000","450.000","product__image--sale")
