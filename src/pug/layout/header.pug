header(class=`header ${current === '/' ? 'header--home' : ''}`)
    .container
        .header__inner
            .header__inner-user
                label(for="user").user__icon
                    i.fas.fa-user-circle
            input(type="checkbox" class="header__inner-check" id="user")
            ul.header__inner-list
                each item in headerTops
                    li.list__item
                        a(href= item.link class="list__item-link")= item.name
            .header__inner-search
                input(type="text", name="" placeholder="Tìm kiếm ở đây ...")
                i(class="fas fa-search")
                span#cartNumbers.badge
